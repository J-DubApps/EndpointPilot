{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://endpointpilot.local/schemas/reg-ops-v1.1.json",
  "title": "EndpointPilot Registry Operations with Authentication",
  "description": "Schema for EndpointPilot registry operations including digital signature support",
  "version": "1.1.0",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the registry operation"
      },
      "name": {
        "type": "string",
        "description": "Registry value name"
      },
      "path": {
        "type": "string",
        "pattern": "^HKEY_[A-Z_]+\\\\.*",
        "description": "Registry key path"
      },
      "value": {
        "type": "string",
        "description": "Registry value"
      },
      "regtype": {
        "type": "string",
        "enum": ["string", "dword", "qword", "binary", "multi-string", "expandable"],
        "description": "Registry value type"
      },
      "write_once": {
        "type": "string",
        "enum": ["true", "false"],
        "description": "Whether to write the registry value only once"
      },
      "delete": {
        "type": "boolean",
        "description": "Whether to delete the registry value"
      },
      "targeting_type": {
        "type": "string",
        "enum": ["none", "group", "computer", "user"],
        "description": "Type of targeting to apply"
      },
      "target": {
        "type": "string",
        "description": "Target for the operation"
      },
      "requiresAdmin": {
        "type": "boolean",
        "default": false,
        "description": "Whether this operation requires administrative/SYSTEM privileges"
      },
      "adminContext": {
        "type": "string",
        "enum": ["user", "system", "auto"],
        "default": "auto",
        "description": "Execution context when admin is required"
      },  
      "_comment1": {
        "type": "string",
        "description": "Comment field 1"
      },
      "_comment2": {
        "type": "string",
        "description": "Comment field 2"
      },
      "signature": {
        "type": "string",
        "description": "Base64-encoded digital signature of the operation data",
        "pattern": "^[A-Za-z0-9+/]+=*$"
      },
      "timestamp": {
        "type": "string",
        "format": "date-time",
        "description": "ISO 8601 timestamp when signature was created"
      },
      "signerCertThumbprint": {
        "type": "string",
        "description": "SHA-1 thumbprint of the signing certificate",
        "pattern": "^[A-Fa-f0-9]{40}$"
      },
      "hashAlgorithm": {
        "type": "string",
        "enum": ["SHA-256"],
        "default": "SHA-256",
        "description": "Hash algorithm used for signature generation"
      },
      "signatureVersion": {
        "type": "string",
        "enum": ["1.0"],
        "default": "1.0",
        "description": "Signature format version for future compatibility"
      }
    },
    "required": ["id", "name", "path", "regtype", "targeting_type", "target"],
    "additionalProperties": false,
    "allOf": [
      {
        "if": {
          "properties": {
            "delete": { "enum": [false, null] }
          }
        },
        "then": {
          "required": ["value"]
        }
      }
    ]
  }
}