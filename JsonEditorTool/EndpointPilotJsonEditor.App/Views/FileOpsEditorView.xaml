<UserControl x:Class="EndpointPilotJsonEditor.App.Views.FileOpsEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EndpointPilotJsonEditor.App.Views"
             xmlns:viewmodels="clr-namespace:EndpointPilotJsonEditor.App.ViewModels"
             xmlns:converters="clr-namespace:EndpointPilotJsonEditor.App.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewmodels:FileOpsEditorViewModel}">
    
    <UserControl.Resources>
        <converters:BoolToInvertedBoolConverter x:Key="BoolToInvertedBoolConverter" />
    </UserControl.Resources>
    
    <local:OperationEditorViewBase x:Name="BaseView">
        <local:OperationEditorViewBase.Details>
            <Grid>
                <Grid.Resources>
                    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0,15,0,5" />
                    </Style>
                </Grid.Resources>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Basic Information Section -->
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                           Text="Basic Information" Style="{StaticResource SectionHeaderStyle}" />
                
                <!-- ID -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="ID:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedOperation.Id, Mode=OneWay}" 
                         IsReadOnly="True" Style="{StaticResource FieldValueStyle}" />
                
                <!-- File Information Section -->
                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                           Text="File Information" Style="{StaticResource SectionHeaderStyle}" />
                
                <!-- Source Filename -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Source Filename:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SourceFilename, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FieldValueStyle}" 
                         IsEnabled="{Binding DeleteFile, Converter={StaticResource BoolToInvertedBoolConverter}}" />
                
                <!-- Destination Filename -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Destination Filename:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding DestinationFilename, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FieldValueStyle}" />
                
                <!-- Source Path -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Source Path:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FieldValueStyle}" 
                         IsEnabled="{Binding DeleteFile, Converter={StaticResource BoolToInvertedBoolConverter}}" />
                
                <!-- Destination Path -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Destination Path:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding DestinationPath, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FieldValueStyle}" />
                
                <!-- Options Section -->
                <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                           Text="Options" Style="{StaticResource SectionHeaderStyle}" />
                
                <!-- Delete File -->
                <TextBlock Grid.Row="8" Grid.Column="0" Text="Delete File:" Style="{StaticResource FieldLabelStyle}" />
                <CheckBox Grid.Row="8" Grid.Column="1" IsChecked="{Binding DeleteFile}" Style="{StaticResource CheckBoxStyle}" />
                
                <!-- Overwrite -->
                <TextBlock Grid.Row="9" Grid.Column="0" Text="Overwrite:" Style="{StaticResource FieldLabelStyle}" />
                <CheckBox Grid.Row="9" Grid.Column="1" IsChecked="{Binding Overwrite}" Style="{StaticResource CheckBoxStyle}" 
                          IsEnabled="{Binding DeleteFile, Converter={StaticResource BoolToInvertedBoolConverter}}" />
                
                <!-- Copy Once -->
                <TextBlock Grid.Row="10" Grid.Column="0" Text="Copy Once:" Style="{StaticResource FieldLabelStyle}" />
                <CheckBox Grid.Row="10" Grid.Column="1" IsChecked="{Binding CopyOnce}" Style="{StaticResource CheckBoxStyle}" 
                          IsEnabled="{Binding DeleteFile, Converter={StaticResource BoolToInvertedBoolConverter}}" />
                
                <!-- Exist Check Location -->
                <TextBlock Grid.Row="11" Grid.Column="0" Text="Exist Check Location:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding ExistCheckLocation, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FieldValueStyle}" />
                
                <!-- Exist Check -->
                <TextBlock Grid.Row="12" Grid.Column="0" Text="Exist Check:" Style="{StaticResource FieldLabelStyle}" />
                <CheckBox Grid.Row="12" Grid.Column="1" IsChecked="{Binding ExistCheck}" Style="{StaticResource CheckBoxStyle}" />
                
                <!-- Targeting Section -->
                <TextBlock Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" 
                           Text="Targeting" Style="{StaticResource SectionHeaderStyle}" />
                
                <!-- Targeting Type -->
                <TextBlock Grid.Row="14" Grid.Column="0" Text="Targeting Type:" Style="{StaticResource FieldLabelStyle}" />
                <ComboBox Grid.Row="14" Grid.Column="1" ItemsSource="{Binding TargetingTypes}" 
                          SelectedItem="{Binding TargetingType}" Style="{StaticResource ComboBoxStyle}" />
                
                <!-- Target -->
                <TextBlock Grid.Row="15" Grid.Column="0" Text="Target:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="15" Grid.Column="1" Text="{Binding Target, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FieldValueStyle}" />
                
                <!-- Comments Section -->
                <TextBlock Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="2" 
                           Text="Comments" Style="{StaticResource SectionHeaderStyle}" />
                
                <!-- Comment 1 -->
                <TextBlock Grid.Row="17" Grid.Column="0" Text="Comment 1:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="17" Grid.Column="1" Text="{Binding Comment1, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FieldValueStyle}" />
                
                <!-- Comment 2 -->
                <TextBlock Grid.Row="18" Grid.Column="0" Text="Comment 2:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="18" Grid.Column="1" Text="{Binding Comment2, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FieldValueStyle}" />
            </Grid>
        </local:OperationEditorViewBase.Details>
    </local:OperationEditorViewBase>
</UserControl>