<UserControl x:Class="EndpointPilotJsonEditor.App.Views.ConfigEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EndpointPilotJsonEditor.App.Views"
             xmlns:viewmodels="clr-namespace:EndpointPilotJsonEditor.App.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewmodels:ConfigEditorViewModel}">

    <UserControl.Resources>
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5,5,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="FieldValueStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="Padding" Value="5,3" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!-- Style for ToggleSwitch -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton" BasedOn="{StaticResource MaterialDesignSwitchToggleButton}">
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="CONFIG.json Editor" FontSize="20" FontWeight="Bold" />
            <TextBlock Text="Edit the global configuration settings for EndpointPilot" Margin="0,5,0,0" />
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> <!-- OrgName -->
                    <RowDefinition Height="Auto" /> <!-- RefreshInterval -->
                    <RowDefinition Height="Auto" /> <!-- NetworkScriptRootEnabled -->
                    <RowDefinition Height="Auto" /> <!-- NetworkScriptRootPath -->
                    <RowDefinition Height="Auto" /> <!-- HttpsScriptRootEnabled -->
                    <RowDefinition Height="Auto" /> <!-- HttpsScriptRootPath -->
                    <RowDefinition Height="Auto" /> <!-- CopyLogFileToNetwork -->
                    <RowDefinition Height="Auto" /> <!-- RoamFiles -->
                    <RowDefinition Height="Auto" /> <!-- NetworkLogFile -->
                    <RowDefinition Height="Auto" /> <!-- NetworkRoamFolder -->
                    <RowDefinition Height="Auto" /> <!-- SkipFileOps -->
                    <RowDefinition Height="Auto" /> <!-- SkipDriveOps -->
                    <RowDefinition Height="Auto" /> <!-- SkipRegOps -->
                    <RowDefinition Height="Auto" /> <!-- SkipRoamOps -->
                </Grid.RowDefinitions>

                <!-- Organization Name -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Organization Name:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding OrgName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FieldValueStyle}" />

                <!-- Refresh Interval -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Refresh Interval (minutes):" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RefreshInterval, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FieldValueStyle}" />

                <!-- Network Script Root Enabled -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Network Script Root Enabled:" Style="{StaticResource FieldLabelStyle}" />
                <ToggleButton Grid.Row="2" Grid.Column="1" IsChecked="{Binding NetworkScriptRootEnabled}" Style="{StaticResource ToggleSwitchStyle}" />

                <!-- Network Script Root Path -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Network Script Root Path:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding NetworkScriptRootPath, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FieldValueStyle}" />

                <!-- HTTPS Script Root Enabled -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="HTTPS Script Root Enabled:" Style="{StaticResource FieldLabelStyle}" />
                <ToggleButton Grid.Row="4" Grid.Column="1" IsChecked="{Binding HttpsScriptRootEnabled}" Style="{StaticResource ToggleSwitchStyle}" />

                <!-- HTTPS Script Root Path -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="HTTPS Script Root Path:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding HttpsScriptRootPath, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FieldValueStyle}" />

                <!-- Copy Log File To Network -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Copy Log File To Network:" Style="{StaticResource FieldLabelStyle}" />
                <CheckBox Grid.Row="6" Grid.Column="1" IsChecked="{Binding CopyLogFileToNetwork}" Style="{StaticResource CheckBoxStyle}" />

                <!-- Roam Files -->
                <TextBlock Grid.Row="7" Grid.Column="0" Text="Roam Files:" Style="{StaticResource FieldLabelStyle}" />
                <CheckBox Grid.Row="7" Grid.Column="1" IsChecked="{Binding RoamFiles}" Style="{StaticResource CheckBoxStyle}" />

                <!-- Network Log File -->
                <TextBlock Grid.Row="8" Grid.Column="0" Text="Network Log File:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding NetworkLogFile, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FieldValueStyle}" />

                <!-- Network Roam Folder -->
                <TextBlock Grid.Row="9" Grid.Column="0" Text="Network Roam Folder:" Style="{StaticResource FieldLabelStyle}" />
                <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding NetworkRoamFolder, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FieldValueStyle}" />

                <!-- Skip File Ops -->
                <TextBlock Grid.Row="10" Grid.Column="0" Text="Skip File Operations:" Style="{StaticResource FieldLabelStyle}" />
                <CheckBox Grid.Row="10" Grid.Column="1" IsChecked="{Binding SkipFileOps}" Style="{StaticResource CheckBoxStyle}" />

                <!-- Skip Drive Ops -->
                <TextBlock Grid.Row="11" Grid.Column="0" Text="Skip Drive Operations:" Style="{StaticResource FieldLabelStyle}" />
                <CheckBox Grid.Row="11" Grid.Column="1" IsChecked="{Binding SkipDriveOps}" Style="{StaticResource CheckBoxStyle}" />

                <!-- Skip Registry Ops -->
                <TextBlock Grid.Row="12" Grid.Column="0" Text="Skip Registry Operations:" Style="{StaticResource FieldLabelStyle}" />
                <CheckBox Grid.Row="12" Grid.Column="1" IsChecked="{Binding SkipRegOps}" Style="{StaticResource CheckBoxStyle}" />

                <!-- Skip Roam Ops -->
                <TextBlock Grid.Row="13" Grid.Column="0" Text="Skip Roam Operations:" Style="{StaticResource FieldLabelStyle}" />
                <CheckBox Grid.Row="13" Grid.Column="1" IsChecked="{Binding SkipRoamOps}" Style="{StaticResource CheckBoxStyle}" />
            </Grid>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Reload" Command="{Binding ReloadCommand}" Padding="10,5" Margin="0,0,10,0" />
            <Button Content="Save" Command="{Binding SaveCommand}" Padding="10,5" Background="#007ACC" Foreground="White" />
        </StackPanel>
    </Grid>
</UserControl>