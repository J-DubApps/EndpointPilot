<Window x:Class="EndpointPilotJsonEditor.App.Views.CertificateSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Select Signing Certificate" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Margin="16,16,16,8">
            <StackPanel Margin="16">
                <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                           Text="Digital Signing Certificate Selection"/>
                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock}"
                           Text="Select a certificate to digitally sign your EndpointPilot operations for enhanced security."
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Certificate List -->
        <materialDesign:Card Grid.Row="1" Margin="16,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="16,16,16,8">
                    <TextBlock Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                               Text="Available Code Signing Certificates"/>
                    <TextBlock Style="{DynamicResource MaterialDesignCaptionTextBlock}"
                               Text="{Binding CertificateStatusMessage}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <ListView Grid.Row="1" 
                          ItemsSource="{Binding AvailableCertificates}"
                          SelectedItem="{Binding SelectedCertificate}"
                          Margin="16,8,16,16"
                          SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Subject" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Subject}" 
                                                   ToolTip="{Binding Subject}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Issuer" Width="180">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Issuer}" 
                                                   ToolTip="{Binding Issuer}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Expires" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding NotAfter, StringFormat='{}{0:yyyy-MM-dd}'}"
                                                   ToolTip="{Binding NotAfter}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Thumbprint" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Thumbprint}" 
                                                   ToolTip="{Binding Thumbprint}"
                                                   FontFamily="Consolas"
                                                   FontSize="10"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </materialDesign:Card>

        <!-- Options -->
        <materialDesign:Card Grid.Row="2" Margin="16,8">
            <StackPanel Margin="16">
                <CheckBox IsChecked="{Binding RememberSelection}" 
                          Content="Remember this certificate for future signings"
                          Style="{DynamicResource MaterialDesignCheckBox}"/>
                <TextBlock Style="{DynamicResource MaterialDesignCaptionTextBlock}"
                           Text="When checked, this certificate will be automatically selected for future signing operations."
                           Margin="32,4,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="16">
            <Button Style="{DynamicResource MaterialDesignFlatButton}"
                    Content="CANCEL"
                    Command="{Binding CancelCommand}"
                    Margin="8,0"/>
            <Button Style="{DynamicResource MaterialDesignRaisedButton}"
                    Content="SELECT"
                    Command="{Binding SelectCommand}"
                    IsDefault="True"
                    Margin="8,0"/>
        </StackPanel>
    </Grid>
</Window>