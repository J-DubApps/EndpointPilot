<UserControl x:Class="EndpointPilotJsonEditor.App.Views.OperationEditorViewBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EndpointPilotJsonEditor.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5,5,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        
        <Style x:Key="FieldValueStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="Padding" Value="5,3" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="Padding" Value="5,3" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="5" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="HeaderText" Text="Operation Editor" FontSize="20" FontWeight="Bold" />
            <TextBlock x:Name="SubHeaderText" Text="Edit operations" Margin="0,5,0,0" />
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Operations List -->
            <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <!-- List Header -->
                    <TextBlock Grid.Row="0" Text="Operations" FontWeight="Bold" Margin="10" />
                    
                    <!-- List of Operations -->
                    <ListBox Grid.Row="1" x:Name="OperationsList" 
                             ItemsSource="{Binding Operations}" 
                             SelectedItem="{Binding SelectedOperation}"
                             DisplayMemberPath="DisplayName"
                             ItemContainerStyle="{StaticResource ListBoxItemStyle}"
                             BorderThickness="0" />
                    
                    <!-- List Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
                        <Button Content="Add" Command="{Binding AddOperationCommand}" Padding="5,2" Margin="0,0,5,0" />
                        <Button Content="Remove" Command="{Binding RemoveOperationCommand}" Padding="5,2" Margin="0,0,5,0" />
                        <Button Content="Duplicate" Command="{Binding DuplicateOperationCommand}" Padding="5,2" Margin="0,0,5,0" />
                        <Button Content="↑" Command="{Binding MoveUpCommand}" Padding="5,2" Margin="0,0,5,0" />
                        <Button Content="↓" Command="{Binding MoveDownCommand}" Padding="5,2" />
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Operation Details -->
            <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ContentPresenter x:Name="DetailsContent" Margin="10" />
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Reload" Command="{Binding ReloadCommand}" Padding="10,5" Margin="0,0,10,0" />
            <Button Content="Save" Command="{Binding SaveCommand}" Padding="10,5" Background="#007ACC" Foreground="White" />
        </StackPanel>
    </Grid>
</UserControl>